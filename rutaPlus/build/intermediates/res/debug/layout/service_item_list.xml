<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="16dp" 
    android:layout_marginRight="16dp">
	
    
    <View
        android:id="@+id/separator"
        android:layout_width="1dp"
        android:layout_height="20dp"
        android:layout_toLeftOf="@+id/status"
        android:layout_centerVertical="true"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="10dp"
        android:background="@android:color/darker_gray"
        android:paddingRight="10dp" />
    
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dip"
        android:layout_marginLeft="8dip"
        android:layout_toStartOf="@id/separator"
        android:layout_alignParentLeft="true"
        android:textAppearance="?android:attr/textAppearanceListItem"
        android:gravity="left"
        android:text="Otro lugar" />
	
     <TextView
        android:id="@+id/service_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dip"
        android:layout_alignLeft="@id/title"
        android:layout_below="@id/title"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="2014-03-04 67:00:00" />
     
    <TextView
        android:id="@+id/subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dip"
        android:layout_alignLeft="@id/title"
        android:layout_below="@id/service_type"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="2014-03-04 67:00:00" />

    <TextView
        android:id="@+id/status"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignStart="@android:id/title"
        android:layout_below="@android:id/title"
        android:layout_centerVertical="true"
        android:layout_marginRight="8dip"
        android:text="Completado" />

</RelativeLayout><!-- From: file:/Users/Acktos/AndroidStudioProjects/RutaPlus/rutaPlus/src/main/res/layout/service_item_list.xml -->